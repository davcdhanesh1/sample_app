<%= provide(:title, 'edit') %>
<h1>edit your profile here</h1>

<div class="row">
  <div class="span6">

    <%= form_for(@user) do |f| %>

        <%= render 'shared/errors', object: f.object %>

        <%= f.label :new_name %>
        <%= f.text_field :name %>

        <%= f.label :new_password %>
        <%= f.password_field :password %>

        <%= f.label :new_password_confirmation %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit 'Save changes', class: 'btn btn-large btn-primary center' %>

    <% end %>
  </div>

  <div class="span6">
    <%= gravatar_for @user %>
    <%= link_to 'Change your profile pic here', "http://gravatar.com/emails" %>
  </div>
</div>